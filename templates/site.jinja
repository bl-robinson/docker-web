{% for item in sites %}
server {
        listen 80;
        server_name {{ item.name }};

        location / {
            rewrite ^ https://{{ item.name }};
        }

        location ^~ /.well-known {
            root /var/www/vhosts/letsencrypt;
            try_files $uri =404;
        }

}

server {
    listen 443 ssl http2;
    server_name {{ item.name }};

    ssl_certificate /etc/crt/tls.cert;
    ssl_certificate_key /etc/crt/tls.key;

    {{ custom_config }}

}
{% endfor %}